{
    "name": "hindent-format",
    "displayName": "hindent-format",
    "description": "Use hindent to format Haskell code.",
    "repository": {
        "type": "git",
        "url": "https://github.com/monofon/hindent-format"
    },
    "version": "0.0.7",
    "publisher": "monofon",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:haskell"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Hindent configuration",
            "properties": {
                "hindent-format.command": {
                    "type": [
                        "string"
                    ],
                    "default": "hindent",
                    "description": "Specifies the hindent invocation with options."
                },
                "hindent-format.enable": {
                    "type": [
                        "boolean"
                    ],
                    "default": "true",
                    "description": "Enable hindent formatting."
                }
            }
        },
        "commands": [
            {
                "command": "hindent-format.format",
                "title": "Format Document or Selection",
                "category": "Hindent"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}