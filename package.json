{
    "name": "hindent-format",
    "displayName": "Hindent Format",
    "description": "Format Haskell source code with hindent.",
    "version": "0.0.5",
    "publisher": "monofon",
    "repository": "https://github.com/monofon/hindent-format",
    "engines": {
        "vscode": "^1.7.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:haskell"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Hindent command line",
            "properties": {
                "hindentFormat.command": {
                    "type": [
                        "string"
                    ],
                    "default": "hindent",
                    "description": "Specifies the hindent invocation with options."
                }
            }
        },
        "commands": [
            {
              "command": "haskell.hindent",
              "title": "hindent current file"
            }
          ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
